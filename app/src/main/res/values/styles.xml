<resources>
    <!-- Base application theme. -->

    <!-- Base application theme. -->
    <style name="AmmeterTheme" parent="AppTheme">
        <!--导航栏颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--通知栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控件选中后颜色-->
        <item name="colorAccent">@color/uiColorPrimaryAccent</item>
    </style>

    <style name="itemHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="itemCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/ui_font_huge</item>
        <item name="android:textColor">@color/uiColorWhite</item>
    </style>

    <style name="itemCardTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/ui_font_huge</item>
        <item name="android:textColor">@color/uiColorWhite</item>
    </style>

    <style name="itemCardSubTitle" parent="itemCardTitle">
        <item name="android:textSize">@dimen/ui_font_large</item>
    </style>

    <style name="itemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/uiColorPrimaryAccent</item>
    </style>

    <style name="itemStart">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/uiColorWhite</item>
    </style>

    <style name="itemEnd">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/uiColorWhite</item>
    </style>

</resources>