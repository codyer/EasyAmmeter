<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="itemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="itemTitleBig" parent="itemTitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="itemNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:hint">@string/please_input_hint</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:maxLength">10</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="itemNumberBig" parent="itemNumber">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FF5949</item>
    </style>
</resources>