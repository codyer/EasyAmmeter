<resources>
    <!-- Base application theme. -->

    <!-- Base application theme. -->
    <style name="AmmeterTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--导航栏颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--通知栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控件选中后颜色-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher" parent="FullscreenTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowBackground">@drawable/ic_cold_launch</item>
    </style>

    <style name="itemHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ItemCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_normal</item>
        <item name="android:layout_marginStart">@dimen/dimen_normal</item>
        <item name="android:layout_marginEnd">@dimen/dimen_normal</item>
    </style>

    <style name="itemCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">@dimen/ui_font_huge</item>
        <item name="android:textColor">@color/uiColorWhite</item>
    </style>

    <style name="itemCardLeft" parent="itemCard">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="itemCardRight" parent="itemCard">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="itemCardTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/ui_font_huge</item>
        <item name="android:textColor">@color/uiColorWhite</item>
    </style>

    <style name="itemCardSubTitle" parent="itemCardTitle">
        <item name="android:textSize">@dimen/ui_font_large</item>
    </style>

    <style name="itemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/uiColorPrimaryAccent</item>
    </style>

    <style name="itemStart">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/ui_font_big</item>
        <item name="android:textColor">@color/uiColorWhite</item>
    </style>

    <style name="itemEnd">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textSize">@dimen/ui_font_big</item>
        <item name="android:textColor">@color/uiColorWhite</item>
    </style>

</resources>