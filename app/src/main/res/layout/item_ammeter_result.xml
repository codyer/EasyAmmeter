<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="price"
            type="Float" />

        <variable
            name="sharing"
            type="Float" />

        <variable
            name="ammeter"
            type="com.cody.ammeter.model.db.table.Ammeter" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                tools:background="@color/uiColorPrimaryAccent"
                android:background="@{ammeter.oldAmmeter>ammeter.newAmmeter ?@color/uiColorPrimaryAccent:@color/color1}"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/itemTitle"
                    android:padding="20dp"
                    android:layout_margin="10dp"
                    android:minEms="2"
                    android:text="@{ammeter.name}"
                    android:textSize="40sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="春" />

                <!-- 总表 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:visibility="gone"
                    android:visibility="@{ammeter.id>1?View.GONE:View.VISIBLE}"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/itemTitle"
                            android:text="@string/last_month" />

                        <TextView
                            style="@style/itemNumber"
                            android:text='@{ammeter.oldAmmeter + " 度"}'
                            tools:text="22.34 度" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/itemTitle"
                            android:text="@string/this_month" />

                        <TextView
                            style="@style/itemNumber"
                            android:text='@{ammeter.newAmmeter + " 度"}'
                            tools:text="22.34 度" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/itemTitle"
                            android:text="@string/use" />

                        <TextView
                            style="@style/itemNumber"
                            android:text='@{(ammeter.newAmmeter - ammeter.oldAmmeter) + " 度"}'
                            tools:text="22.34 度" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/itemTitle"
                            android:text="@string/total_price" />

                        <TextView
                            style="@style/itemNumberBig"
                            android:text='@{(price * (sharing + ammeter.newAmmeter - ammeter.oldAmmeter)) + " 元"}'
                            tools:text="22.34 元" />

                    </RelativeLayout>
                </LinearLayout>
                <!-- 分表 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:visibility="visible"
                    android:visibility="@{ammeter.id > 1?View.VISIBLE:View.GONE}"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/itemTitle"
                            tools:text="上月：20 ; "
                            android:text='@{"上月：" + ammeter.oldAmmeter +" ; "}' />

                        <TextView
                            style="@style/itemTitle"
                            tools:text="本月：20 ; "
                            android:text='@{"本月：" + ammeter.newAmmeter+" ; "}' />

                        <TextView
                            style="@style/itemTitle"
                            tools:text="使用：20度"
                            android:text='@{"使用：" + (ammeter.newAmmeter-ammeter.oldAmmeter) +"度"}' />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/itemTitle"
                            android:text="@string/private_use_price_sub" />

                        <TextView
                            style="@style/itemNumber"
                            android:text='@{(price * (ammeter.newAmmeter - ammeter.oldAmmeter)) + " 元"}'
                            tools:text="22.34 元" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/itemTitle"
                            android:text="@string/public_use_price_sub" />

                        <TextView
                            style="@style/itemNumber"
                            android:text='@{(price * sharing) + " 元"}'
                            app:layout_constraintRight_toRightOf="parent"
                            tools:text="22.34 元" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/itemTitle"
                            android:text="@string/total_price_sub" />

                        <TextView
                            style="@style/itemNumberBig"
                            android:text='@{(price * (sharing + ammeter.newAmmeter - ammeter.oldAmmeter)) + " 元"}'
                            tools:text="22.34 元" />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </FrameLayout>
</layout>