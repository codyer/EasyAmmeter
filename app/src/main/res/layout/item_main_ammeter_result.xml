<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="price"
            type="java.lang.Float" />

        <variable
            name="sharing"
            type="java.lang.Float" />

        <variable
            name="ammeter"
            type="com.cody.ammeter.model.db.table.Ammeter" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                tools:background="@color/color1"
                android:background="@{ammeter.oldAmmeter>ammeter.newAmmeter ?@color/uiColorPrimaryAccent:@color/color1}"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/itemTitle"
                        android:background="@drawable/bg_shape_round"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="@string/main_ammeter" />

                    <TextView
                        style="@style/itemTitle"
                        android:padding="20dp"
                        android:layout_margin="10dp"
                        android:text="@{ammeter.name}"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:maxLength="4"
                        tools:text="春彻底的" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        style="@style/itemStart"
                        tools:text="上次电表读数：204353"
                        android:text='@{"上次电表读数：" + ammeter.oldAmmeter}' />

                    <TextView
                        style="@style/itemStart"
                        tools:text="当前电表读数：207565"
                        android:text='@{"当前电表读数：" + ammeter.newAmmeter}' />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/itemStart"
                            android:text="@string/use" />

                        <TextView
                            style="@style/itemStart"
                            tools:text="20度"
                            android:layout_gravity="end"
                            android:text='@{(ammeter.newAmmeter-ammeter.oldAmmeter) +"度"}' />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/itemStart"
                            android:text="@string/public_use" />

                        <TextView
                            style="@style/itemStart"
                            android:text='@{sharing + " 度"}'
                            tools:text="22.34 度" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/itemStart"
                            android:text="@string/price" />

                        <TextView
                            style="@style/itemStart"
                            android:text='@{String.format("%.2f元/度",price)}'
                            tools:text="22.34元/度" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/itemStart"
                            android:text="@string/total_price" />

                        <TextView
                            style="@style/itemStart"
                            android:text='@{String.format("%.2f元",(price * (sharing + ammeter.newAmmeter - ammeter.oldAmmeter)))}'
                            tools:text="22.34 元" />

                    </LinearLayout>

                    <TextView
                        style="@style/itemStart"
                        android:text='@{String.format("%.2f元",(ammeter.oldBalance - ammeter.newBalance))}'
                        tools:text="22.34 元" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>