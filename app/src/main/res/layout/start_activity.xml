<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="ammeter"
            type="com.cody.helper.Ammeter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6E6E6"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="40sp"
            android:text="@{ammeter.name}"
            tools:text="æ€»" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/itemTitleBig"
                android:text="@string/last_month" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/itemNumberBig"
                android:layout_weight="2"
                android:gravity="center"
                android:enabled="@{!ammeter.subMeter}"
                android:text="@={ammeter.lastMonth}"
                tools:text="88.32"
                android:autofillHints="@string/please_input_hint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/itemTitleBig"
                android:layout_marginEnd="10dp"
                android:text="@string/degree" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/itemTitleBig"
                android:text="@string/this_month" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:autofillHints="@string/please_input_hint"
                android:gravity="center"
                android:text="@={ammeter.thisMonth}"
                style="@style/itemNumberBig"
                tools:text="88 " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/itemTitleBig"
                android:layout_marginEnd="10dp"
                android:text="@string/degree" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/itemTitleBig"
                android:text="@string/total_price" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@={ammeter.totalPrice}"
                style="@style/itemNumberBig"
                android:hint="@string/please_input_price_hint"
                android:gravity="center"
                tools:text="88.32" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/itemTitleBig"
                android:layout_marginEnd="10dp"
                android:text="@string/yuan" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/ok"
            android:padding="20dp"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/make_ok" />

    </LinearLayout>
</layout>